<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/profile_back" />

    <ImageView
        android:id="@+id/pict"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:src="@drawable/profile_pict" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pict"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Hamish Daud"
        android:textSize="23dp"
        android:textColor="#29435e"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nim"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:text="NIM"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#29435e"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/faculty"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isi_nim"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="Faculty"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#29435e"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/program"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isi_faculty"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="Program"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#29435e"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/semester"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isi_program"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="Semester"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#29435e"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/isi_nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/nim"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:text="NIM"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#29435e"
        />

    <TextView
        android:id="@+id/isi_faculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isi_nim"
        android:layout_toRightOf="@+id/faculty"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"

        android:text="Faculty"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#29435e"
        />

    <TextView
        android:id="@+id/isi_program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isi_faculty"
        android:layout_toRightOf="@+id/program"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"

        android:text="Program"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#29435e"
        />

    <TextView
        android:id="@+id/isi_semester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isi_program"
        android:layout_toRightOf="@+id/semester"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"

        android:text="Semester"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#29435e"
        />





            <TextView
                android:id="@+id/motivation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/semester"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="Motivation"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#29435e"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/motivation"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#29435e" />

        </RelativeLayout>


</ScrollView>
