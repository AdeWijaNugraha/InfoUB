<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bln"
            android:layout_width="60dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="views"
            android:textSize="15dp"
            android:textColor="#2f5782"/>

        <TextView
            android:id="@+id/tgl"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="view"
            android:textStyle="bold"
            android:layout_below="@id/bln"
            android:textSize="25dp"
            android:textColor="#2f5782"/>

        <TextView
            android:id="@+id/thn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="views"
            android:textStyle="bold"
            android:layout_below="@id/tgl"
            android:textSize="15dp"
            android:textColor="#2f5782"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:src="@drawable/batas"
            android:layout_toRightOf="@+id/bln"
            />

        <TextView
            android:id="@+id/menu_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/bln"
            android:text="TestMenu"
            android:textSize="18dp"
            android:textColor="#2f5782"/>

        <TextView
            android:id="@+id/lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/menu_text"
            android:layout_toRightOf="@+id/tgl"
            android:text="views"
            android:textSize="15dp"
            android:textColor="#2f5782"/>

        <TextView
            android:id="@+id/jam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/lokasi"
            android:layout_toRightOf="@+id/thn"
            android:text="views"
            android:textSize="15dp"
            android:textColor="#2f5782"/>

    </RelativeLayout>
</LinearLayout>